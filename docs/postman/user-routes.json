{
  "info": {
    "name": "User Routes",
    "description": "User profile management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get My Profile",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/users/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me"
          ]
        }
      }
    },
    {
      "name": "Update My Profile",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Felly Updated\",\n  \"phone\": \"+62822222222\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me"
          ]
        }
      }
    },
    {
      "name": "Upload Profile Photo",
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "photo",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/users/me/photo",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me",
            "photo"
          ]
        }
      }
    },
    {
      "name": "Get My Sessions (as Host)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/users/me/sessions?status=all",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me",
            "sessions"
          ]
        }
      }
    },
    {
      "name": "Get Payment Summary",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/users/me/summary",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me",
            "summary"
          ]
        }
      }
    },
    {
      "name": "Change Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/me/password",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me",
            "password"
          ]
        }
      }
    },
    {
      "name": "Delete Account",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/users/me",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "users",
            "me"
          ]
        }
      }
    }
  ]
}