{
  "info": {
    "name": "Auth Routes",
    "description": "Authentication endpoints including magic links",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"felly@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Felly\",\n  \"phone\": \"+62811111111\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        }
      }
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"felly@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "OAuth Callback",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{supabase_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/callback",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "callback"
          ]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/auth/profile",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "profile"
          ]
        }
      }
    },
    {
      "name": "Generate Magic Link",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"playerId\": \"{{player_id}}\",\n  \"purpose\": \"payment\",\n  \"expiresInHours\": 24\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/magic-link",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "magic-link"
          ]
        }
      }
    },
    {
      "name": "Verify Magic Link",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{magic_link_token}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/magic-link/verify",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "auth",
            "magic-link",
            "verify"
          ]
        }
      }
    }
  ]
}